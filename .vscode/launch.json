    "version": "0.2.0",
    "configurations": [
        {
            "name": "JumbleSpider",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "cwd": "../jumble_scraper",
            "args": [
                "crawl",
                "jumble_spider",
                "-a",
                "date_offset=365",
                "-a",
                "output_path=../../data/jumble_data.json",
                "-a",
                "force_update=False",
            ],
            "console": "integratedTerminal"
        }
    ]
